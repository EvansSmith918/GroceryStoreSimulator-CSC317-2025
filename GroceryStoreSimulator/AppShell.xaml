<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GroceryStoreSimulator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GroceryStoreSimulator"
    Shell.FlyoutBehavior="Disabled"
    Title="GroceryStoreSimulator">
    
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:HomePage}"
            Route="HomePage" />
        <ShellContent
            Title="Aisles"
            ContentTemplate="{DataTemplate local:AislePage}"
            Route="AislePage" />
        <ShellContent
            Title="Items"
            ContentTemplate="{DataTemplate local:ItemPage}"
            Route="ItemPage" />
        <ShellContent
            Title="Cart"
            ContentTemplate="{DataTemplate local:CartPage}"
            Route="CartPage" />
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
    </TabBar>
</Shell>
