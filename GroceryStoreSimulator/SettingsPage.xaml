<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroceryStoreSimulator.SettingsPage"
             Title="Settings">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Settings" FontSize="Large" FontAttributes="Bold" />
        <Entry x:Name="NameEntry" Placeholder="Enter your name" />
        <Entry x:Name="CashEntry" Placeholder="Cash in hand" Keyboard="Numeric" />
    </StackLayout>
</ContentPage>